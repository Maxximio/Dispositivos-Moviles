<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    tools:context=".ui.activities.PedidosActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="123dp"
        android:layout_height="34dp"
        android:layout_marginBottom="36dp"
        android:text="Pedidos Online"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.26"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="171dp"
        android:layout_height="20dp"
        android:layout_marginBottom="44dp"
        android:text="Es bueno verte otra vez"
        android:textColor="#9B9595"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/edit_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.312"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="171dp"
        android:layout_height="20dp"
        android:text="O conectese usando las redes sociales"
        android:textColor="#9B9595"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="550dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="171dp"
        android:layout_height="20dp"
        android:text="¿Olvido su contraseña?"
        android:textColor="#9B9595"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="654dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="91dp"
        android:layout_height="20dp"
        android:text="Registrese"
        android:textColor="#EE5858"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="255dp"
        tools:layout_editor_absoluteY="654dp" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="91dp"
        android:layout_height="20dp"
        android:text="Correo"
        android:textColor="#EE5858"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="301dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="91dp"
        android:layout_height="20dp"
        android:text="Contraseña"
        android:textColor="#EE5858"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="376dp" />

    <!--        android:background="#00A1F6"-->

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="228dp"
        android:layout_height="24dp"
        android:layout_marginBottom="52dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:paddingLeft="30px"
        app:layout_constraintBottom_toTopOf="@+id/edit_pass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.409"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edit_pass"
        android:layout_width="228dp"
        android:layout_height="26dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:paddingLeft="30px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.409"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.581" />

    <Button
        android:id="@+id/btn_login"
        style="@style/ButtonsGeneral"
        android:layout_width="170dp"
        android:layout_height="59dp"
        android:layout_marginBottom="204dp"
        android:backgroundTint="#EE5858"
        android:text="@string/button"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_pass"
        app:layout_constraintVertical_bias="1.0"
        tools:text="Ingresar" />

    <Button
        android:id="@+id/btn_twitter"
        android:layout_width="138dp"
        android:layout_height="39dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#00A1F6"

        android:text="Twitter"
        app:icon="@drawable/p_de_t"
        app:iconPadding="1dp"
        app:iconSize="40dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_face"
        tools:layout_editor_absoluteY="584dp" />

    <Button
        android:id="@+id/btn_face"
        android:layout_width="137dp"
        android:layout_height="40dp"
        android:backgroundTint="#3C5A9A"
        android:text="Facebook"


        app:icon="@drawable/f_de_f"
        app:iconPadding="1dp"
        app:iconSize="20dp"
        app:iconTint="@color/title_color_dm"
        tools:layout_editor_absoluteX="223dp"
        tools:layout_editor_absoluteY="583dp" />
    <!--        android:background="#00A1F6"-->

</androidx.constraintlayout.widget.ConstraintLayout>