<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:backgroundTint="#FFFFFF"
    tools:context=".ui.activities.PedidosActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="@dimen/margin"
        android:text="Pedidos Online"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/margin"
        android:text="Es bueno verte otra vez"
        android:textColor="#9B9595"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="43dp" />


    <!--        android:background="#00A1F6"-->

    <!--        android:background="#FFFFFF"-->
    <!--        android:backgroundTint="#FFFFFF"-->

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"
        android:layout_marginTop="28dp"
        android:text="O conectese usando las redes sociales"
        android:textColor="#9B9595"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/btn_login"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"
        android:layout_marginTop="40dp"
        android:text="Correo"
        android:textColor="#EE5858"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_editor_absoluteX="50dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"
        android:text="Contraseña"
        android:textColor="#EE5858"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/edit_name"
        tools:layout_editor_absoluteX="50dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"
        android:layout_marginTop="4dp"
        android:drawableBottom="@color/black"
        android:paddingLeft="30px"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        tools:layout_editor_absoluteX="0dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edit_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"
        android:layout_marginTop="8dp"
        android:drawableBottom="@color/black"
        android:paddingLeft="30px"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        tools:layout_editor_absoluteX="50dp" />

    <Button
        android:id="@+id/btn_login"
        style="@style/ButtonsGeneral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"
        android:layout_marginTop="60dp"
        android:backgroundTint="#EE5858"
        android:text="Ingresar"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/edit_pass"
        tools:layout_editor_absoluteX="0dp"
        tools:text="Ingresar" />

    <Button
        android:id="@+id/btn_twitter"
        android:layout_width="138dp"
        android:layout_height="39dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="80dp"

        android:backgroundTint="#00A1F6"
        android:text="Twitter"
        app:icon="@drawable/p_de_t"
        app:iconPadding="1dp"
        app:iconSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_face"
        app:layout_constraintHorizontal_bias="0.961"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textReg"
        android:layout_width="91dp"
        android:layout_height="20dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="56dp"
        android:clickable="true"
        android:onClick="onClick"
        android:text="Registrese"


        android:textColor="#EE5858"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_face"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/txt_olv"
        android:layout_width="171dp"
        android:layout_height="20dp"
        android:layout_marginBottom="56dp"
        android:text="¿Olvido su contraseña?"
        android:textColor="#9B9595"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_twitter"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn_face"
        android:layout_width="137dp"
        android:layout_height="40dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="84dp"


        android:backgroundTint="#3C5A9A"
        android:text="Facebook"
        app:icon="@drawable/f_de_f"
        app:iconPadding="1dp"
        app:iconSize="20dp"
        app:iconTint="@color/title_color_dm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <!--        android:background="#00A1F6"-->

</androidx.constraintlayout.widget.ConstraintLayout>